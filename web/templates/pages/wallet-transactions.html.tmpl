{{if not .PageData.OnlyRenderPage}}
{{template "layouts/app" .}}
{{end}}

{{define "page-content"}}
<main
  id="page-content"
  data-on-load="@get('/app/wallets/{{.WalletAddr}}/transactions/updates')"
  class="flex flex-col items-center justify-center text-white px-2 py-4"
>
  <h1 class="text-2xl mr-auto pl-2">History</h1>
  {{range .Transactions}}
  <details class="mt-2 bg-neutral-800 rounded w-full py-1 px-3">
    <summary class="flex flex-col gap-1">
      <div class="flex justify-between">
        <div class="flex flex-col">
          <span class="text-sm text-neutral-400">{{.Direction}}</span>
          <span>{{.Recipient}}</span>
        </div>
        <span class="text-sm text-neutral-400">{{.Timestamp}}</span>
      </div>
      {{if .Memo}}
      <span class="bg-neutral-900 text-xs px-1 py-px border border-neutral-700 rounded">{{.Memo}}</span>
      {{end}}
    </summary>
    <div class="flex flex-col gap-2">
      {{range .Assets}}
      <span>{{.Name}} - x{{.Qty}}</span>
      {{end}}
    </div>
  </details>
  {{end}}
</main>
{{end}}

{{if .PageData.OnlyRenderPage}}
{{template "page-content" .PageData}}
{{end}}