{{template "layouts/app" .}}

{{define "page-content"}}
<main id="page-content" class="flex flex-col items-center justify-center text-white px-2 py-4">
  <h1 class="text-2xl mr-auto pl-2">Wallets</h1>
  <button data-on-click="@post('/app/wallets')" class="mt-3 bg-neutral-800 py-1 px-3 rounded">Create new wallet</button>
  <div class="flex flex-col gap-2 w-full mt-6">
    {{range .Wallets}}
    <div class="flex p-1 w-full bg-neutral-800 rounded">
      <div class="flex flex-col mr-auto">
        <p class="text-xl">{{.Addr}}</p>
        {{if .IsPersonal}}
        <p class="text-sm text-neutral-400 leading-tight">personal</p>
        {{end}}
      </div>
      {{if not .IsPersonal | and .IsAdmin}}
      <a href="/app/wallets/{{.Addr}}/settings" class="bg-white text-black px-2 underline content-center mr-1">Settings</a>
      {{end}}
      <a href="/app/wallets/{{.Addr}}/assets" class="bg-white text-black px-2 underline content-center">Select</a>
    </div>
    {{end}}
  </div>
</main>
{{end}}